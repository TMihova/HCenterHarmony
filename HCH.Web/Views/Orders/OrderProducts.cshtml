@model IEnumerable<HCH.Web.Models.OrderProductViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="mt-3">
    <div class="container w-75 justify-content-center">
        <h3 class="text-center">Поръчка No @ViewData["OrderId"]/@ViewData["OrderDate"]</h3>
        <h3 class="text-center">Продукти:</h3>
        <div class="container-fluid">
            <hr class="hr-1" />
            <table class="table  mx-auto table-hover">
                <thead>
                    <tr class="row">
                        <th class="col-md-1">#</th>
                        <th class="col-md-4">Име</th>
                        <th class="col-md-2" style="text-align:right;">Ед. цена в лв.</th>
                        <th class="col-md-2" style="text-align:right;">Количество</th>
                        <th class="col-md-1"></th>
                        <th class="col-md-2" style="text-align:right;">Цена в лв.</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="row">
                            <th class="col-md-1">@item.Id</th>
                            <td class="col-md-4">@item.Name</td>
                            <td class="col-md-2" style="text-align:right;">@item.Price</td>
                            <td class="col-md-2" style="text-align:right;">@item.Count</td>
                            <th class="col-md-1"></th>
                            <td class="col-md-2" style="text-align:right;">@(item.Price * item.Count)</td>
                        </tr>
                    }
                    <tr class="row">
                        <th class="col-md-1"></th>
                        <td class="col-md-4"></td>
                        <td class="col-md-2"></td>
                        <td class="col-md-2"></td>
                        <td class="col-md-1" style="text-align:right;">Общо:</td>
                        <td class="col-md-2" style="text-align:right;">@ViewData["TotalPrice"]</td>
                    </tr>
                </tbody>
            </table>
            <hr class="hr-1 mb-0" />
            <div class="container button-holder mb-3">
                <button class="btn harmony-bg-color" onclick="history.back()">Обратно</button>
            </div>
        </div>        
    </div>
</main>
