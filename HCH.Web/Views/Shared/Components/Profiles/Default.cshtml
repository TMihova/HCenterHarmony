@model IEnumerable<HCH.Web.Models.ProfileViewModel>

    
        <div class="row " style="margin-top:25px; display:flex; justify-content:space-around;">
            
            @foreach (var item in Model)
            {
                <div class="col-md-3">                    
                        <div class="panel panel-default">
                            <div class="panel-heading panel-heading-custom">
                                <h3 class="panel-title text-center" style="font-weight: bold;">@item.Name</h3>
                            </div>
                            <div class="panel-body">
                                @item.Description ... <a asp-area="" asp-controller="Profiles" asp-action="Details" asp-route-id="@item.Id" class="card-link">Вижте повече</a>
                            </div>
                        </div>                        
                    </div>
            }
        </div>
    
