@model HCH.Web.Models.AppointmentViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <h3>Изтриване на приемен час от графика на терапевт @Model.TherapistFullName</h3>
    <div>
        <hr />

        <dl class="dl-horizontal mt-3">
            <dt class="text-bold">
                Ден от седмицата:
            </dt>
            <dd>
                @Model.DayOfWeekBg
            </dd>
            <dt class="text-bold">
                Приемен час:
            </dt>
            <dd>
                @Model.VisitingHour
            </dd>
        </dl>
                
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Изтрий" class="btn harmony-bg-color" /> |
            <a asp-action="Index">Към списъка</a>
        </form>
    </div>
</div>
