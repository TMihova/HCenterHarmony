@model IEnumerable<HCH.Web.Models.ProfileViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="mt-3">
    <div class="container">
        <div class="row">
        <div class="col-md-3">
            <h3>Изберете терапевт</h3>
            <hr class="hr-4" />
            @foreach (var item in Model)
            {
                <div class="container mt-2">
                    <a asp-controller="Therapists" asp-action="Index" asp-route-profile="@item.Name"><h4>@item.Name</h4></a>
                </div>
            }
        </div>
        <div class="col-md-9">
            <h3>Запознайте се с методите, които предлагаме</h3>
            <hr class="hr-4" />

            @foreach (var item in Model)
            {
                <div class="card mt-5">
                    <div class="card-body">
                        <h3 class="card-title">@item.Name</h3>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Profiles" asp-action="Details" asp-route-id="@item.Id" class="card-link">Вижте повече</a>
                    </div>
                </div>
                <hr class="hr-4" />
            }

        </div>
    </div>
    <hr class="hr-4 mb-0" />
    </div>
</main>
