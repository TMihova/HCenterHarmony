@model IEnumerable<HCH.Web.Models.ProfileViewModel>

@{
    ViewData["Title"] = "Index_Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="mt-3">

    <div class="container-fluid">
        <div class="col-md-3">
            <h3>Терапевти</h3>
            <hr class="hr-4" />
            @foreach (var item in Model)
            {
                <div class="container mt-2">
                    <a asp-controller="Therapists" asp-action="Index_Admin" asp-route-profile="@item.Name"><h4>@item.Name</h4></a>
                </div>
            }
        </div>
        <div class="col-md-9">
            <h3>Профили</h3>
            <hr class="hr-4" />

            <a class="a-black dropdown-item" asp-controller="Profiles" asp-action="Create">Създай профил</a>
            <hr class="hr-4" />
            @foreach (var item in Model)
            {
                <div class="card mt-5">
                    <div class="card-body">
                        <h3 class="card-title">@item.Name</h3>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Profiles" asp-action="Details" asp-route-id="@item.Id" class="card-link">Вижте повече</a>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Profiles" asp-action="Edit" asp-route-id="@item.Id" class="card-link">Редактирай</a>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Profiles" asp-action="Delete" asp-route-id="@item.Id" class="card-link">Изтрий</a>
                    </div>
                </div>
                <hr class="hr-4" />
            }

        </div>
    </div>
    <hr class="hr-4 mb-0" />

</main>

