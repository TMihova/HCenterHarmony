@model HCH.Web.Models.ProfileDetailsViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4>Създаване на профил</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-area="Admin" asp-controller="Profiles" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" rows="5" placeholder="Описание..." class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Създай" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-area="Admin" asp-controller="Profiles" asp-action="Index_Admin">Към списъка</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
