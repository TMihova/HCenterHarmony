@model HCH.Web.Models.TherapistViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h4>Промяна на данни за терапевт</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="OldProfile" />
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly/>
                </div>
                <div class="form-group">
                    <label asp-for="Profile" class="control-label"></label>
                    <select asp-for="Profile" class="form-control" asp-items="ViewBag.Profile"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Запази" class="btn harmony-bg-color" />
                </div>
            </form>
        </div>
        
    </div>

    <div>
        <a asp-area="Admin" asp-controller="Therapists" asp-action="Index_Admin" asp-route-profile="@Model.Profile">Към списък терапевти</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
