@model HCH.Web.Models.TherapistViewModel

@{
    ViewData["Title"] = "Remove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h3>Премахване на терапевт от профил @Model.Profile</h3>

    <div class="row">
        <div class="col-md-4">
            <form asp-area="Admin" asp-controller="Therapists" asp-action="Remove">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Profile" class="control-label"></label>
                    <input asp-for="Profile" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <input type="submit" value="Премахни терапевт" class="btn harmony-bg-color" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-area="Admin" asp-controller="Therapists" asp-action="Index_Admin" asp-route-profile="@Model.Profile">Към списък терапевти</a>
    </div>
</div>
